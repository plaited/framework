{
  "name": "plaited",
  "version": "1.0.0",
  "engines": {
    "node": ">= 14.2.0",
    "npm": ">= 6.14"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist/",
    "src/"
  ],
  "author": "Edward Irby <e.irby@pm.me>",
  "homepage": "https://github.com/plaited/plaited/blob/main/readme.md",
  "license": "BSD-2-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/npm/cli.git"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "lint": "eslint . --quiet --ext .ts,.js",
    "lint:ci": "eslint .  --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "start": "web-dev-server --config web-dev-server.config.js --open /examples/index.html --node-resolve --watch",
    "test": "web-test-runner \"src/**/*.spec.(ts|js)\" --config web-dev-server.config.js --node-resolve",
    "test:ci": "npm test",
    "test:watch": "npm test -- --watch --verbose"
  },
  "browserslist": [
    "> 2%",
    "edge >= 87"
  ],
  "types": "dist/index.d.ts",
  "type": "module",
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@esm-bundle/chai": "^4.3.4",
    "@types/mocha": "^9.1.1",
    "@types/sinon": "^10.0.11",
    "@types/snowpack-env": "^2.3.4",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "@web/dev-server": "^0.1.31",
    "@web/dev-server-esbuild": "^0.3.0",
    "@web/test-runner": "^0.13.30",
    "cz-conventional-changelog": "^3.0.1",
    "esbuild": "0.14.45",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-mocha": "^10.0.5",
    "format-package": "^7.0.0",
    "husky": "^8.0.1",
    "init": "0.1.2",
    "sinon": "^14.0.0",
    "typescript": "^4.7.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint && npm run test:ci && format-package -w"
    }
  },
  "npm": {
    "overrides": {
      "ansi-regex@>2.1.1 <5.0.1": ">=5.0.1"
    }
  }
}
