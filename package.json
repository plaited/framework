{
  "name": "@plaited/plaited",
  "version": "0.2.1",
  "engines": {
    "node": ">= 14.2.0",
    "npm": ">= 6.14"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist/",
    "src/"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "lint": "eslint . --quiet --ext .ts,.js",
    "lint:ci": "eslint .  --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "husky install",
    "start": "web-dev-server --config web-dev-server.config.js --open /examples/index.html --node-resolve --watch",
    "test": "web-test-runner \"src/**/*.spec.(ts|js)\" --config web-dev-server.config.js --node-resolve",
    "test:ci": "npm test",
    "test:watch": "npm test -- --watch --verbose"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint && npm run test:ci && format-package -w"
    }
  },
  "browserslist": [
    "> 2%",
    "edge >= 87"
  ],
  "types": "dist/index.d.ts",
  "type": "module",
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@esm-bundle/chai": "^4.3.4",
    "@types/mocha": "^8.2.2",
    "@types/sinon": "^10.0.2",
    "@types/snowpack-env": "^2.3.3",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "@web/dev-server": "^0.1.17",
    "@web/dev-server-esbuild": "^0.2.12",
    "@web/test-runner": "^0.13.5",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "0.12.6",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-compat": "^3.9.0",
    "eslint-plugin-mocha": "^9.0.0",
    "format-package": "^6.1.0",
    "husky": "^6.0.0",
    "ini": ">=2.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sinon": "^11.1.1",
    "typescript": "^4.3.2",
    "y18n": ">=5.0.8"
  }
}
