{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": true,
    "preserveSymlinks": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "ES2022",
    "typeRoots": [
      "./node_modules/@types",
      "types"
    ],
    "outDir": "dist",
    "rootDir": "src"
  },
  "exclude": [
    "**/dist",
    "**/*.spec.*"
  ],
  "include": [
    "src"
  ]
}